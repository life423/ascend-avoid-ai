        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.1",
        "@types/ms": "^2.1.0",
        "@types/node": "^22.14.0",
        "@types/qs": "^6.14.0",
        "@types/range-parser": "^1.2.7",
        "@types/send": "^0.17.5",
        "@types/serve-static": "^1.15.8",
        "rimraf": "^6.0.1",
